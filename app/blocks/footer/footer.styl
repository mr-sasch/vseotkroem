.footer
	display block
	overflow hidden

.footer__bottom
	padding 30px 0 10px
	text-align center
	background-color #202020

.footer__separator
	margin 10px 0
	width 100%
	height 1px
	border 1px solid #c3c3c3

.footer__phone
	margin-top 25px
	font-size 30px
	font-weight 600
	color $colorGreen

/* to top */
.footer__to-top
	position fixed
	z-index 20
	right 30px
	bottom 60px
	padding 17px 13px 9px
	display none
	cursor pointer
	background-color #fff
	border 2px solid $colorGreen
	border-radius 5px
	transition background-color .2s ease, border-color .2s ease

.footer__to-top:hover
	background-color $colorGreen
	border-color #fff

.footer__to-top:hover .footer__to-top-arrow
	border-color #fff #fff transparent transparent

.footer__to-top-arrow
	width 10px
	height 10px
	border 2px solid
	border-color $colorGreen $colorGreen transparent transparent
	transform rotate(-45deg)
	transition .2s ease
