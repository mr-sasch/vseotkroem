.any-questions
	padding 25px 0
	display block
	text-align center
	background url('../../images/any-questions.png') no-repeat
	background-size cover


.any-questions_txt
	padding-bottom 20px
	font-family Roboto, sans-serif
	font-size 24px
	font-weight bold
	text-align center
	text-transform uppercase
	color #fff

.any-questions__call
	padding 12px 29px
	display inline-block
	font-size 18px
	font-weight 600
	color #fff
	background-color $colorGreen
	border none
	border-radius 10px
